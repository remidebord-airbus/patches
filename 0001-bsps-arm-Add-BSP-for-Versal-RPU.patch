+  control |= ARM_CP15_CTRL_C;
+  control |= ARM_CP15_CTRL_I;
+  control |= ARM_CP15_CTRL_Z;
+  arm_cp15_set_control(control);
+  _ARM_Data_synchronization_barrier();
+  _ARM_Instruction_synchronization_barrier();
+
+  bsp_start_clear_bss();
+}
